{
  "name": "stinky-bot",
  "version": "0.0.1",
  "description": "Semi-declarative Discord Bot for Ruse Cruise",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build-ts": "tsc",
    "lint-ts": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
    "clean-dist": "rm -rf dist",
    "postinstall": "npm run build-ts && npm run lint-ts && npm run move-scripts",
    "move-scripts": "cp -R src/scripts dist/scripts && mkdir -p dist/__temp && chmod +x dist/scripts/*",
    "build": "npm run clean-dist && npm run postinstall",
    "start": "node dist/bot.js"
  },
  "author": "Pablo Morales",
  "license": "MIT",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^2.34.0",
    "@typescript-eslint/parser": "^2.34.0",
    "eslint": "^6.8.0",
    "eslint-plugin-functional": "^1.0.3",
    "typescript": "^3.9.7"
  },
  "dependencies": {
    "@discordjs/opus": "^0.3.3",
    "@types/cron": "^1.7.2",
    "@types/mathjax": "0.0.36",
    "@types/node": "^12.19.12",
    "@types/pg": "^7.14.7",
    "@types/wav": "^1.0.0",
    "@types/ws": "^6.0.4",
    "aws-sdk": "^2.824.0",
    "axios": "^0.21.1",
    "chrono-node": "^2.1.10",
    "cron": "^1.8.2",
    "discord.js": "^12.x",
    "dotenv": "^8.2.0",
    "ffmpeg-static": "^4.2.7",
    "markovchain": "^1.0.2",
    "mathjax-full": "^3.1.2",
    "pg-promise": "^10.5.6"
  }
}
